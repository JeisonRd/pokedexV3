<div class="album py-5 bg-light">
  <div>


    <div class="row justify-content-center">

      {{#if hasRegiones}}

        {{#each regiones as |region|}}

          <div class="card col-md-3" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title">{{region.name}}</h5>
                  <p class="card-text">{{region.description}}</p>
                  <a href="/edit-regiones/{{region.id}}?edit=true"class="btn btn-warning">Editar</a>

                  <form class="form-delete-region form-inline" action="/delete-regiones" method="POST" data-region-name="{{region.name}}">
                      <input type="hidden" name="regionId" value="{{region.id}}">
                      <button type="submit" class="btn btn-danger">Eliminar</button>
                  </form>
                </div>
          </div>
      {{/each}}

      {{else}}
      <h1>No hay regiones creadas</h1>
      {{/if}}

    </div>
  </div>
