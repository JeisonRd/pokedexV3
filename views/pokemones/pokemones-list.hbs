<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">P<span><img src="https://w7.pngwing.com/pngs/282/481/png-transparent-pokemon-pokeball-illustration-pikachu-ash-ketchum-pokemon-pokeball-pokemon-johto-technology.png" style="width: 30px;">kedex App</h1>
        <a href="/create-pokemones" class="btn btn-primary my-2">Crear nuevo Pokem√≥n</a>
    </div>
  </div>
</section>


<div class="album py-1 bg-light ">
  <div >

    <div class="row justify-content-center">

      {{#if hasPokemones}}


        {{#each pokemones as |pokemon|}}
          <div class="card col-md-3" style="width: 18rem;">
            <img src="{{pokemon.image}}" class="card-img-top image" alt="pokemon">
            <div class="card-body">
              <h5 class="card-title">{{pokemon.name}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{pokemon.region.dataValues.name}}</h6>
              <p class="card-text">{{pokemon.tipo.dataValues.name}}</p>
              <a href="/edit-pokemones/{{pokemon.id}}?edit=true" class="btn btn-warning">Editar</a>
              <form class="form-delete-pokemon form-inline" action="/delete-pokemones" method="post" data-pokemon-name="{{pokemon.name}}">
                <input type="hidden" name="pokemonId" value="{{pokemon.id}}">
                <button type="submit" class="btn btn-danger ">Eliminar</button>
              </form>
            </div>
          </div>
        {{/each}}


      {{else}}
      <h1>No hay pokemones creados</h1>
      {{/if}}

    </div>
  </div>
</div>